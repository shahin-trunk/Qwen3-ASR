# Dockerfile for audio processing with torchaudio + torchcodec + vLLM
# Supports: wav, mp3, opus, aac via torchaudio FFmpeg backend
# No soundfile, sox, or pydub - uses only torchaudio with FFmpeg

ARG CUDA_VERSION=12.8.0
ARG from=nvidia/cuda:${CUDA_VERSION}-devel-ubuntu22.04
FROM ${from} AS base

ARG DEBIAN_FRONTEND=noninteractive

# Enable universe repository for additional codec packages
RUN apt-get update -y && apt-get install -y software-properties-common \
    && add-apt-repository universe \
    && apt-get update -y

# Install system dependencies including FFmpeg with full codec support
# FFmpeg 4-8 required for torchcodec compatibility (Ubuntu 22.04 has FFmpeg 4.4)
RUN apt-get upgrade -y && apt-get install -y --no-install-recommends \
    git \
    git-lfs \
    python3.12 \
    python3.12-dev \
    python3.12-venv \
    python3-pip \
    wget \
    curl \
    vim \
    ccache \
    ca-certificates \
    pkg-config \
    # FFmpeg and codec libraries for torchaudio/torchcodec
    ffmpeg \
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libswresample-dev \
    libavfilter-dev \
    libavdevice-dev \
    # Audio codec support for mp3, opus, aac
    libmp3lame-dev \
    libmp3lame0 \
    libopus-dev \
    libopus0 \
    libvorbis-dev \
    # AAC support (libfdk-aac may not be available, use native FFmpeg AAC)
    && rm -rf /var/lib/apt/lists/*

# Install CMake (required for some builds)
RUN wget https://github.com/Kitware/CMake/releases/download/v3.26.1/cmake-3.26.1-Linux-x86_64.sh \
    -q -O /tmp/cmake-install.sh \
    && chmod u+x /tmp/cmake-install.sh \
    && mkdir /opt/cmake-3.26.1 \
    && /tmp/cmake-install.sh --skip-license --prefix=/opt/cmake-3.26.1 \
    && rm /tmp/cmake-install.sh \
    && ln -s /opt/cmake-3.26.1/bin/* /usr/local/bin

# Set Python 3.12 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.12 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1

RUN git lfs install

WORKDIR /app

# Build environment variables
ENV MAX_JOBS=32
ENV NVCC_THREADS=2
ENV CCACHE_DIR=/root/.cache/ccache

# Upgrade pip and install build tools
RUN --mount=type=cache,target=/root/.cache/pip \
    python -m pip install -U pip setuptools wheel

# Remove conflicting package if present
RUN apt-get remove -y python3-blinker 2>/dev/null || true

# Verify FFmpeg installation and codec support
RUN ffmpeg -version && \
    echo "=== Checking encoders ===" && \
    ffmpeg -encoders 2>/dev/null | grep -E "(mp3|opus|aac|pcm)" && \
    echo "=== Checking decoders ===" && \
    ffmpeg -decoders 2>/dev/null | grep -E "(mp3|opus|aac|pcm)"

# Install vLLM (installs torch, torchaudio, transformers)
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install -U vllm

# Install torchcodec - requires FFmpeg libraries
# torchcodec is sensitive to FFmpeg configuration
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install torchcodec

# Copy and run verification script for torchaudio and torchcodec
COPY verify_audio_setup.py /tmp/verify_audio_setup.py
RUN python /tmp/verify_audio_setup.py && rm /tmp/verify_audio_setup.py

# Optional: Install flash-attention for better performance
ARG BUNDLE_FLASH_ATTENTION=true
RUN --mount=type=cache,target=/root/.cache/ccache \
    --mount=type=cache,target=/root/.cache/pip \
    if [ "$BUNDLE_FLASH_ATTENTION" = "true" ]; then \
        pip3 install -U flash-attn --no-build-isolation git+https://github.com/Dao-AILab/flash-attention.git; \
    fi

# Clean up pip cache
RUN rm -rf /root/.cache/pip

# Healthcheck for audio processing capabilities
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import torchaudio; import torchcodec; import torch; assert torch.cuda.is_available()"

EXPOSE 80
